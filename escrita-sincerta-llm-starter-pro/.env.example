# ==========================================
# ESCRITA SINCERTA LLM - CONFIGURAÇÕES
# ==========================================

# Portas dos serviços
OPENWEBUI_PORT=3000
API_PORT=8000

# Configuração do PostgreSQL + pgvector
POSTGRES_USER=sincerta
POSTGRES_PASSWORD=escrita_segura_2024
POSTGRES_DB=sincerta_memory

# Modelos Ollama (padrão: leve, geral, pesado)
SMALL_MODEL=phi3:3.8b
GENERAL_MODEL=qwen2.5:7b
HEAVY_MODEL=llama3.1:8b-instruct

# Modelos por agente
DEV_MODEL=qwen2.5:7b
REFLEX_MODEL=phi3:3.8b

# Override manual de modelo (deixe vazio para usar lógica automática)
MODEL_OVERRIDE=

# Lista de modelos para download automático
OLLAMA_MODELS=phi3:3.8b,qwen2.5:7b,llama3.1:8b-instruct

# Configurações da API
API_DEBUG=true
API_RELOAD=true

# Configurações de embedding (futuro)
EMBEDDING_MODEL=bge-m3
EMBEDDING_DIMENSION=1024

# Configurações de RAG
RAG_TOP_K=5
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# Configurações de logging
LOG_LEVEL=INFO
LOG_FORMAT=detailed
